snippet figure
	\begin{figure}
		% \includegraphics{} requires \usepackage{graphicx}
		\centering
		\includegraphics[scale=1.0]{graphic.jpg}
		\caption{text}\label{fig:label}
	\end{figure}
snippet subfigure
