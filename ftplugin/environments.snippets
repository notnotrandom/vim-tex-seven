	\begin{figure}[!htb]
		\centering
		\begin{subfigure}{0.5\textwidth}
			\centering
			\includegraphics[scale=0.5]{graphicfile1}
			\captionsetup{width=0.95\linewidth}
			\caption{text}\label{fig:somelabel1}
		\end{subfigure}%
		\begin{subfigure}{0.5\textwidth}
			\centering
			\includegraphics[scale=0.5]{graphicfile2}
